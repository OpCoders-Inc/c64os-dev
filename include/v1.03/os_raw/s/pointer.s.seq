;----[ POINTER.S ]----------------------RDXY     .MACRO ;ÒEADS ÐTR INTO Ø/Ù         LDX \1         LDY \1+1         .ENDMLDXY     .MACRO ;ÌOADS Ø/Ù WITH ADDRESS         LDX #<\1         LDY #>\1         .ENDMSTXY     .MACRO         STX \1         STY \1+1         .ENDM;---------------------------------------;ÇET AND ÓET ÒEGÐTR FROM ÓTORESTORESET .MACRO ;STORE,INDEX         STX \1+(\2*2)         STY \1+(\2*2)+1         .ENDMSTOREGET .MACRO ;STORE,INDEX         LDX \1+(\2*2)         LDY \1+(\2*2)+1         .ENDM;---------------------------------------;ÔOOLKIT ÈELPERSCLASSMETHOD .MACRO ;METHOD¤OFFSET         JSR SETCLASS¤+STKT         LDY #\1         JSR GETMETHOD¤+STKT         .ENDMSUPERMETHOD .MACRO ;METHOD¤OFFSET         JSR SETSUPER¤+STKT         LDY #\1         JSR GETMETHOD¤+STKT         .ENDM;---------------------------------------;ÆLAG ÍANIPULATIONSETFLAG  .MACRO ;PTR,INDEX,FLAGS         LDY #\2         LDA (\1),Y         ORA #\3         STA (\1),Y         .ENDMCLRFLAG  .MACRO ;PTR,INDEX,FLAGS         LDY #\2         LDA (\1),Y         AND #\3:$FF         STA (\1),Y         .ENDMTOGFLAG  .MACRO ;PTR,INDEX,FLAGS         LDY #\2         LDA (\1),Y         EOR #\3         STA (\1),Y         .ENDM;---------------------------------------;ÓETTERS AND ÇETTERSSETOBJ8  .MACRO ;PTR,OFFSET,INT8         LDY #\2         LDA #\3         STA (\1),Y         .ENDMSETOBJ16 .MACRO ;PTR,OFFSET,INT16         LDY #\2         LDA #<\3         STA (\1),Y         INY         LDA #>\3         STA (\1),Y         .ENDMSETOBJPTR .MACRO ;PTR,OFFSET,PTR         LDY #\2         LDA \3         STA (\1),Y         INY         LDA \3+1         STA (\1),Y         .ENDMSETOBJXY .MACRO ;PTR,OFFSET,(ÒEG×RD)         TYA         LDY #\2+1         STA (\1),Y         DEY         TXA         STA (\1),Y         .ENDMRDOBJ16  .MACRO ;PTR,OFFSET         ;ÒEGÐTR <- PROPERTY         LDY #\2         LDA (\1),Y         TAX         INY         LDA (\1),Y         TAY         .ENDMGETOBJ16 .MACRO ;PTR,OFFSET,TO         ;Á <- PROPERTY HI BYTE         LDY #\2+1  ;OFFSET HI BYTE         LDA (\1),Y         PHA         DEY        ;OFFSET LO BYTE         LDA (\1),Y         STA \3     ;ÓAVE LO BYTE         PLA         STA \3+1   ;ÓAVE HI BYTE         .ENDM;---------------------------------------PUSHXY   .MACRO         TYA ;ÈI         PHA         TXA ;ÌO         PHA         .ENDMPULLXY   .MACRO         PLA         TAX ;ÌO         PLA         TAY ;ÈI         .ENDMPUSH16   .MACRO ;WORD TO PUT ON STACK         LDA #>\1 ;ÈI         PHA         LDA #<\1 ;ÌO         PHA         .ENDMPUSHPTR  .MACRO ;PTR TO PUT ON STACK         LDA \1+1 ;ÈI         PHA         LDA \1   ;ÌO         PHA         .ENDMPULL16   .MACRO ;PTR TO PULL FROM STACK         PLA         STA \1   ;ÌO         PLA         STA \1+1 ;ÈI         .ENDM;---------------------------------------COPY16   .MACRO ;WORD,DEST         LDA #<\1         STA \2   ;1ST: LO BYTE         LDA #>\1         STA \2+1 ;2ND: HI BYTE         .ENDMCOPYPTR  .MACRO ;PTR,DEST         LDA \1         STA \2   ;1ST: LO BYTE         LDA \1+1         STA \2+1 ;2ND: HI BYTE         .ENDM